@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<header class="header header_non-stick">
    @Html.Partial("_HeaderLogo")
</header>
<main class="forget_main grey--bg">
    <div class="wrapper">
        <div class="sign_whole_wrap">
            <div class="forget_page white--bg">
                <h1>@ViewData["Title"]</h1>
                <p>
                    Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
                </p>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
