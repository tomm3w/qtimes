<script>
    $("#submitBtn").click(function () {
        event.preventDefault();
        var response = grecaptcha.getResponse();
        if (response.length === 0) {
            $.notify("Please check the reCAPTCHA");
        } else {
            $("#loginForm").submit();
        }
    });</script>

