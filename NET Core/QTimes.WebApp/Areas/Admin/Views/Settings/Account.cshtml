<div class="content-wrapper">

    @Html.Partial("_PartialMenu")

    <section class="content-header">
        <div class="content_header_left">
            <h2 class="uppercase">SETTINGS</h2>
            <div class="navigation_lft">
                <ul>
                    <li class="active"><a href="/admin/settings/account">Account Setup</a></li>
                    <li><a href="/admin/settings/preference">Preferences</a></li>
                    <li><a href="/admin/settings/business">Business Profile</a></li>
                </ul>
            </div>
        </div>
    </section>

    <section class="content-header_prf">
        <h2 class="uppercase">ACCOUNT SETUP</h2>
        <a href="#" class="btn btn-primary" data-bind="click: UpdateAccountSetup">
            SAVE CHANGES
        </a>
    </section>

    <section class="content-body clearfix">
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" placeholder="alleybowling" data-bind="value: UserName" readonly>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" class="form-control" placeholder="admin.qtimes@mail.com" data-bind="value: Email" readonly>
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" data-bind="value: FullName">
                    </div>
                    <div class="form-group">
                        <label>Business Name</label>
                        <input type="text" class="form-control" placeholder="Business Name" data-bind="value: BusinessName">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="************" data-bind="value: CurrentPassword">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="form-control" placeholder="Enter new password to change" data-bind="value: NewPassword">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm new password" data-bind="value: ConfirmPassword">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="105 Edwards Village Blvd" data-bind="value: Address">
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" placeholder="Edwards" data-bind="value: City">
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" class="form-control" placeholder="CO" data-bind="value: State">
                    </div>
                    <div class="form-group">
                        <label>ZIP</label>
                        <input type="text" class="form-control zip-cd" placeholder="81632" data-bind="value: Zip">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Timezone</label>
                        <select class="form-control" id="timezone"></select>
                    </div>
                </div>
            </form>
        </div>
        <div class="button_del content-body_prf">
            @*<a href="#">Delete Account</a>*@
        </div>
    </section>
</div>
<script src="/Scripts/timezones.full.min.js"></script>
<environment include="Development">
    <script src="~/Scripts/app/reservation/accountsetup.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/Scripts/app/reservation/accountsetup.min.js"></script>
</environment>
