
<script>
    var eventid = '@ViewBag.id';
</script>
<div class="content-wrapper">

    @Html.Partial("_PartialMenu")

    <section class="content-header">
        <div class="content_header_left">
            <h2 class="uppercase" data-bind="text: EventName"></h2>
        </div>
    </section>

    <section class="content-header_prf">
        <h2 class="uppercase">PREFERENCES</h2>
        <a href="/concert/events" class="btn">BACK</a>
        <a href="#" class="btn btn-primary grey-right_btn" data-bind="click: UpdatePreference">
            Save
        </a>
    </section>
    <section class="content-body clearfix">
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group document_form-slide">
                        <p class="heading_doc_profile_con">BOOKING</p>
                        <ul>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: EnableTotalCapacity">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Total Capacity</p>
                                        <p class="policy_pp_con">Total number of available spots </p>
                                    </div>
                                </div>
                                <div class="rt_doc" data-bind="css: { activation: EnableTotalCapacity() }">
                                    <div class="input_book">
                                        <input type="text" placeholder="000" data-bind="value: TotalCapacity">
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: EnableGroupSize">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Group Size</p>
                                        <p class="policy_pp_con">Minimum and maximum size per reservation</p>
                                    </div>
                                </div>
                                <div class="rt_doc" data-bind="css: { activation: EnableGroupSize() }">
                                    <div class="input_book">
                                        <input type="text" placeholder="2" class="grop_size" data-bind="value: MinGroupSize">&nbsp;to
                                        <input type="text" placeholder="5" class="grop_size" data-bind="value: MaxGroupSize">
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: EnableTimeExpiration">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Time Expiration</p>
                                        <p class="policy_pp_con">Allow time expiration for each reservation</p>
                                    </div>
                                </div>
                                <div class="rt_doc" data-bind="css: { activation: EnableTimeExpiration() }">
                                    <div class="select_am_pm select_opt min-opt bok-pref-con">
                                        <div class="select_am_pm_wrap">
                                            <select class="form-control selectpicker" id="select_day_to" data-bind="value: TimeExpiration">
                                                <option value="5">5 Min</option>
                                                <option value="10">10 Min</option>
                                                <option value="15">15 Min</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <p>Seatmap</p>
                                    </div>
                                </div>
                                <div class="rt_doc activation">
                                    <div class="input_book">
                                        <input type="button" value="Manage" data-toggle="modal" data-target="#add-new-reserve_id" />
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group document_form-slide">
                        <p class="heading_doc_profile_con">EXTRAS</p>
                        <ul>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: IsDLScanEnabled">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Drivers License</p>
                                        <p class="policy_pp_con">Add drivers License during signup</p>
                                    </div>
                                </div>
                                <div class="rt_doc"></div>
                            </li>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: IsChargeEnabled">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Tickets &amp; Payments</p>
                                        <p class="policy_pp_con">Setup ticket pricing and payment options</p>
                                    </div>
                                </div>
                                <div class="rt_doc"> </div>
                            </li>
                            <li>
                                <div class="lf_doc">
                                    <div class="check_box_grn con_p">
                                        <input type="checkbox" data-bind="checked: IsSeatmapEnabled">
                                        <label class="checkmark"></label>
                                    </div>
                                    <div class="txt_lf_bk">
                                        <p class="policy_p_con">Use Seating Methods</p>
                                        <p class="policy_pp_con">Setup seating methods and maps</p>
                                    </div>
                                </div>
                                <div class="rt_doc"> </div>
                            </li>
                            @*</li>*@
                        </ul>
                    </div>
                </div>
            </form>
        </div>
    </section>

</div>

<style>
    input[type=time] {
        width: 125px !important;
        border: solid 1px #d1d1d2 !important;
        background: white !important;
        height: 41px !important;
        margin: -10px 0 0 0 !important;
    }

    .input_filed_shw li.name_input_filed_shw input {
        width: 131px !important;
    }

    .input_filed_shw li input {
        border: 1px solid #d1d1d2 !important;
        background: #fff !important;
        padding: 10px 13px !important;
        width: 82px !important;
        height: 40px !important;
        color: #2a2f3a !important;
        margin-top: 12px !important;
    }

    .minus_btn_end li, .time_check_time li {
        margin: 35px 0 0 0;
    }

    #add-new-reserve_id .theme-black-form .form_third {
        padding: 25px 0 25px;
    }
    .append_btn a {
         margin-top: 0; 
    }
</style>

<div class="modal fade new_rule" id="add-new-reserve_id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width:705px">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title uppercase" id="myModalLabel">SEATMAP</h4>
                <div class="append_btn"><a href="#" data-bind="click: UpdateSeating">Done</a></div>
            </div>
            <!-- end of modal-header -->
            <div class="modal-body">
                <form action="#" class="theme-black-form">
                    <div class="form_first">
                        <div class="form-group res_fr_1 select_opt">
                            <label>SeatMap/Image</label>
                            <div class="upload_pic">
                                <div class="img_upld">
                                    <img src="/content/assets/images/bp_1.png" alt="" id="accountlogo">
                                </div>
                                <div class="uplod_btn_click">
                                    <input type="file" class="btn over_in" placeholder="Upload file..." accept="images/*" id="over_in_input">
                                    <button for="file" class="btn btn_photo img-upload_con" id="show_img">Upload file...</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form_third">

                        <div class="form_ac">
                            <div class="form-group document_form-slide">
                                <p class="heading_doc_profile_con">SEATS / SPOTS</p>
                                <ul class="row_group_ul-con-seat">
                                    <li>
                                        <div class="radio_chose">
                                            <input type="radio" id="rows" name="drone" value="row" data-bind="checked: SeatType">
                                            <label class="radio_chose_mrk"></label>
                                        </div>
                                        Rows
                                    </li>
                                    <li>
                                        <div class="radio_chose">
                                            <input type="radio" id="group" name="drone" value="group" data-bind="checked: SeatType">
                                            <label class="radio_chose_mrk"></label>
                                        </div>
                                        Group
                                    </li>
                                </ul>
                                <ul class="seating-concert_ul_dwn">
                                    <li>
                                        <div class="lf_doc seating-concert_lf">
                                            <div class="check_box_grn con_p">
                                                <input type="checkbox" data-bind="checked: AllowCheckInTime">
                                                <label class="checkmark"></label>
                                            </div>
                                            <p class="policy_p_con">Allow Check-In Time</p>
                                        </div>

                                        <div class="seating-concert_rt activation">
                                            <!-- ko foreach: ConcertSeatings-->
                                            <div class="seating-concert__collect_ul">
                                                <ul class="minus_btn_end">
                                                    <li>
                                                        <a href="#" data-bind="click: Delete">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21">
                                                                <g id="remove" transform="translate(-44 -107)">
                                                                    <g id="Group_3" data-name="Group 3" transform="translate(44 107)">
                                                                        <g id="Ellipse_38" fill="none" stroke="#d1d1d2" stroke-width="3px" data-name="Ellipse 38">
                                                                            <circle cx="10.5" cy="10.5" r="10.5" stroke="none" />
                                                                            <circle cx="10.5" cy="10.5" r="9" />
                                                                        </g>
                                                                    </g>
                                                                    <path id="minus" fill="#d1d1d2" d="M0 0H3V11H0z" transform="rotate(90 -28 88)" />
                                                                </g>
                                                            </svg>
                                                        </a>
                                                    </li>
                                                </ul>
                                                <ul class="input_filed_shw">
                                                    <li class="name_input_filed_shw">
                                                        <p>Name</p>
                                                        <input type="text" placeholder="R1" data-bind="value: Name">
                                                    </li>
                                                    <li class="sport_input_filed_shw">
                                                        <p>Spots</p>
                                                        <input type="number" placeholder="10" data-bind="value: Spots">
                                                    </li>
                                                    <li>
                                                        <p>Seats per spot</p>
                                                        <input type="number" placeholder="1" data-bind="value: SeatsPerSpot">
                                                    </li>
                                                </ul>
                                                <ul class="time_check_time">
                                                    <li class="select_am_pm select_opt">
                                                        <input type="time" class="form-control" placeholder="00:00:00" data-bind="value: CheckInTime">
                                                        <div class="select_am_pm_wrap">
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                            <!-- /ko -->
                                            <div class="append_btn"><a href="#" data-bind="click: AddSeats">Add</a></div>
                                        </div>

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- end of theme-black-form -->
            </div>
        </div>
        <!-- end of modal-content -->
    </div>
    <!-- end of modal-dialog -->
</div>

<environment include="Development">
    <script src="~/Scripts/app/concert/eventpreference.js"></script>
</environment>
