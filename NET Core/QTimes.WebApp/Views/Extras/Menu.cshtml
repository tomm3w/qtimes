@{
    ViewBag.Title = "QTimes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .carousel-image{
        height: 373px !important;
        width: fit-content;
    }

</style>
<script>
    $('body').addClass('extras_menu_min');
    $('.nav-item').removeClass('active');
    $('.navbar-nav .dropdown').addClass('active');
    $(".carousel").swipe({
        swipe: function (event, direction, distance, duration, fingerCount, fingerData) {

            if (direction == 'left') $(this).carousel('next');
            if (direction == 'right') $(this).carousel('prev');
        },
        allowPageScroll: "vertical"
    });
</script>

<div class="min_banner">
    <div class="min_banner_txt">
        <p>Menu & Food Ordering </p>
    </div>
</div>
<!-- =========================
      banner_qtimes
      ======================== -->
<main class="extras_menu info_not">
    <div class="sec1">
        <div class="container">
            <div class="sec1_in">
                <p class="">Events are not complete without food concessions but <br>managing crowds and social distancing is difficult. </p>
            </div>
        </div>
    </div>
    <!-- sec1 -->
    <div class="sec2">
        <div class="container">
            <div class="sec2_bg diff1">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mob_sec2 wow slideInLeft" data-wow-duration="2s">
                            <ul class="mob_sec2_ul">
                                <li class="mob_sec2_li ex_1"><img src="/content/assets/images/img/phone-splash@3x.png" alt=""></li>
                                <li class="mob_sec2_li ex_2"><img src="/content/assets/images/img/phone-list@3x.png" alt=""></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="txt_sec2">
                            <p class="head_info-al">Delivery & Pickup Service</p>
                            <p class="txt_info-al">
                                Qtimes offers a mobile web app for events, venues, restaurants, and others that can use a mobile food ordering application where Social Distancing is important
                            </p>
                            <ul class="ul_info-al">
                                <li>Easy Set-up
                                <li>Deliver to attendee or notify that food is ready</li>
                                <li>2-way Messaging</li>
                                <li>Printer for sending over orders from customer to restaurant</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- sec2 -->
    <div class="sec3">
        <div class="container">
            <div class="sec3_bg par_sec3">
                <p>Turnkey solution provided by Qtimes</p>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="txt_sec2">
                        <p class="head_info-al">Turnkey solutions for all food service businesses</p>
                        <p class="txt_info-al">
                            Qtimes offers a mobile web app for events, venues, restaurants, and others that can use a mobile food ordering application where Social Distancing is important
                        </p>
                        <ul class="ul_info-al">
                            <li>Menu Setup</li>
                            <li>Food Order System</li>
                            <li>Credit Card Processing (No Cash)</li>
                            <li>Printer for sending over orders from customer to restaurant</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="carouselImages" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ul class="carousel-indicators">
                            <li data-target="#carouselImages" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselImages" data-slide-to="1"></li>
                            <li data-target="#carouselImages" data-slide-to="2"></li>
                        </ul>

                        <!-- The slideshow -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="/content/assets/images/img/truck-illu.svg" class="d-block carousel-image" alt="">
                            </div>
                            <div class="item">
                                <img src="/content/assets/images/img/foodmenu_llu@3x.png" class="d-block carousel-image" alt="">
                            </div>
                            <div class="item">
                                <img src="/content/assets/images/img/shop-illu@3x.png" class="d-block carousel-image" alt="">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#carouselImages" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carouselImages" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- sec3 -->
</main>
@section Scripts {

}