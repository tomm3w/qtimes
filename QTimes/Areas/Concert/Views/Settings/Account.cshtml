
<div class="content-wrapper">

    @Html.Partial("_PartialMenu")

    <section class="content-header">
        <div class="content_header_left">
            <h2 class="uppercase">SETTINGS</h2>
            <div class="navigation_lft">
                <ul>
                    <li class="active"><a href="#">Account Setup</a></li>
                    <li><a href="/concert/settings/business">Business Profile</a></li>
                    <li><a href="/concert/settings/preferences">Preferences</a></li>
                    <li><a href="/concert/settings/seatings">Seatings</a></li>
                </ul>
            </div>
        </div>
    </section>

    <section class="content-header_prf">
        <h2 class="uppercase">ACCOUNT SETUP</h2>
        <a href="#" class="btn btn-primary grey-right_btn" data-bind="click: UpdateProfile">
            Save
        </a>
    </section>
    <section class="content-body clearfix">
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>User Name</label>
                        <input type="text" class="form-control" placeholder="Username" data-bind="value: UserName" disabled>
                    </div>
                    <div class="form-group">
                        <label>Business Name</label>
                        <input type="text" class="form-control" placeholder="Business Name" data-bind="value: BusinessName">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" data-bind="value: FullName">
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" class="form-control" placeholder="Email Address" data-bind="value: Email">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="************" data-bind="value: CurrentPassword">
                        @*<span class="psw_change">Change password</span>*@
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="form-control" placeholder="Enter new password to change" data-bind="value: NewPassword">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm new password" data-bind="value: ConfirmPassword">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Address" data-bind="value: Address">
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" placeholder="City" data-bind="value: City">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" class="form-control" placeholder="State" data-bind="value: State">
                    </div>
                    <div class="form-group">
                        <label>Zip</label>
                        <input type="text" class="form-control" placeholder="Zip" data-bind="value: Zip">
                    </div>
                </div>
            </form>
        </div>
        @*<div class="button_del content-body_prf">
                <a href="#">Delete Account</a>
            </div>*@
    </section>

</div>
<script src="~/Scripts/app/concert/accountsetup.js"></script>