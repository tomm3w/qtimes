
<script src="~/Scripts/bwip-js-min.js"></script>
<div class="content-wrapper">

    @Html.Partial("_PartialMenu")

    <section class="content-header">
        <div class="content_header_left">
            <h2 class="uppercase">SETTINGS</h2>
            <div class="navigation_lft">
                <ul>
                    <li><a href="/admin/settings/account">Account Setup</a></li>
                    <li><a href="/admin/settings/preference">Preferences</a></li>
                    <li class="active"><a href="/admin/settings/business">Business Profile</a></li>
                </ul>
            </div>
        </div>
    </section><!-- end of content-header -->
    <section class="content-header_prf">
        <h2 class="uppercase">Business Profile</h2>
        <a href="#" class="btn btn-primary" data-bind="click: UpdateProfile">
            SAVE CHANGES
        </a>
    </section>

    <section class="content-body clearfix">
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" data-bind="value: FullName" style="width:472px">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" placeholder="Email Address" data-bind="value: Email" style="width:472px">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="105 Edwards Village Blvd" data-bind="value: Address">
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" placeholder="Edwards" data-bind="value: City">
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <input type="text" class="form-control" placeholder="CO" data-bind="value: State">
                    </div>
                    <div class="form-group">
                        <label>ZIP</label>
                        <input type="text" class="form-control zip-cd" placeholder="81632" data-bind="value: Zip">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Business Name</label>
                        <input type="text" class="form-control" placeholder="Business Name" data-bind="value: BusinessName" style="width:472px">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Business Image</label>
                        <div class="upload_pic">
                            <div class="img_upld">
                                <img src="/images/noimage.png" alt="" id="accountlogo">
                            </div>
                            <div class="uplod_btn_click">
                                <input type="file" class="btn over_in" placeholder="Upload file..." accept="images/*" id="over_in_input">
                                <button for="file" class="btn btn_photo" id="show_img">Upload file...</button>
                                <span id="customtxt"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>


        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Virtual No.</label>
                        <input type="text" class="form-control" placeholder="19709261898" data-bind="value: VirtualNo">
                    </div>
                    <div class="form-group">
                        <label>Phone No.</label>
                        <input type="text" class="form-control" placeholder="+19709223990" data-bind="value: PhoneNo">
                    </div>
                    <div class="form-group">
                        <label>Mobile No.</label>
                        <input type="number" class="form-control" data-bind="value: MobileNo" min="1">
                    </div>
                    <div class="form-group">
                        <label>Pass Template Id</label>
                        <input type="text" class="form-control zip-cd" min="1" data-bind="value: PassTemplateId">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Mobile Page Url</label>
                        <input type="text" class="form-control" placeholder="https://" data-bind="value: MobilePageUrl" style="width:472px">
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Short Url</label>
                        <input type="text" class="form-control" placeholder="https://bit.ly/xyz987" data-bind="value: ShortUrl">
                    </div>
                    <div class="form-group">
                        <label>Timezone</label>
                        <select class="form-control" id="timezone"></select>
                    </div>
                </div>
            </form>
        </div>
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group" style="width:50%">
                        <label>QR Code</label>
                        <div class="upload_pic">
                            <div class="img_upld" style="width:240px">
                                <img src="/images/noimage.png" alt="qrcode" id="qrcode">
                            </div>
                            <div class="uplod_btn_click">
                                <a value="Download" class="btn btn_photo" onclick="downloadImage()">Download</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
<script src="~/Scripts/timezones.full.min.js"></script>
<script src="~/Scripts/app/reservation/businessprofile.js"></script>