@{
    ViewBag.Title = "Account Info";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .form_ac .form-group {
        margin: 0 12px 30px 0!important;
    }

    .form-group input[type=radio] {
        height: unset;
        border: unset;
        width: unset;
        display: inline;
        margin-left:10px;
    }
</style>

<section class="content-header">
    <div class="content_header_left">
        <h2 class="uppercase">SETTINGS</h2>
        <div class="navigation_lft">
            <ul>
                <li class="active"><a href="#">Account Setup</a></li>
                <li><a href="/admin/preferences">Preferences</a></li>
                <li><a href="/admin/restaurant">Business Profile</a></li>
                <li><a href="/admin/tables">Tables</a></li>
            </ul>
        </div>
    </div>
</section>
<section class="content-header_prf">
    <h2 class="uppercase">ACCOUNT SETUP</h2>
    <a href="#" class="btn btn-primary" data-bind="click:Update">
        SAVE CHANGES
    </a>
</section>
<section class="content-body clearfix">
    <div class="account_form content-body_prf">
        <form>
            <div class="form_ac">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" data-bind="value:UserName" disabled>
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="text" class="form-control" data-bind="value:Email">
                </div>
            </div>
            <div class="form_ac">
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="************" data-bind="value:CurrentPassword">
                </div>
            </div>
            <div class="form_ac">
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" class="form-control" placeholder="Enter new password to change" data-bind="value:NewPassword">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" placeholder="Confirm new password" data-bind="value:ConfirmNewPassword">
                </div>
            </div>
            <div class="form_ac">
                <div class="form-group" style="display:inline">
                    <label>Active</label>
                    <input type="radio" class="form-control" name="enabled" value="true" data-bind="checked:isActive" />
                </div>
                <div class="form-group">
                    <label>Blocked</label>
                    <input type="radio" class="form-control" name="enabled" value="false" data-bind="checked:isActive" />
                </div>
            </div>
            <div class="form_ac">
                <div class="form-group">
                    <a data-bind="click:Delete" class="btn btn-danger">Delete Account</a>
                </div>
            </div>
        </form>
    </div>
</section>
@*<script src="~/Scripts/app/accountinfo.js"></script>*@
@Scripts.Render("~/scripts/accountinfo")
