
<div class="content-wrapper">

    @Html.Partial("_PartialMenu")

    <section class="content-header">
        <div class="content_header_left">
            <h2 class="uppercase">SETTINGS</h2>
            <div class="navigation_lft">
                <ul>
                    <li class="active"><a href="/reservation/settings/account">Account Setup</a></li>
                    <li><a href="/reservation/settings/preference">Preferences</a></li>
                    <li><a href="/reservation/settings/business">Business Profile</a></li>
                </ul>
            </div>
        </div>
    </section><!-- end of content-header -->
    <section class="content-header_prf">
        <h2 class="uppercase">ACCOUNT SETUP</h2>
        <a href="#" class="btn btn-primary" data-bind="click: UpdateAccountSetup">
            SAVE CHANGES
        </a>
    </section>

    <section class="content-body clearfix">
        <div class="account_form content-body_prf">
            <form>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" placeholder="alleybowling" data-bind="value: UserName" readonly>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" class="form-control" placeholder="admin.qtimes@mail.com" data-bind="value: Email">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="email" class="form-control" placeholder="************" data-bind="value: CurrentPassword">
                    </div>
                </div>
                <div class="form_ac">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="email" class="form-control" placeholder="Enter new password to change" data-bind="value: NewPassword">
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm new password" data-bind="value: ConfirmPassword">
                    </div>
                </div>
            </form>
        </div>
        <div class="button_del content-body_prf">
            @*<a href="#">Delete Account</a>*@
        </div>
    </section>
</div>
<script src="~/Scripts/app/reservation/accountsetup.js"></script>